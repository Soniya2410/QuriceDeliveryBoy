<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".fragments.EditProfileFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:visibility="gone"
        android:id="@+id/loaderLayout"
        android:layout_gravity="center">
        <com.eyalbira.loadingdots.LoadingDots
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:LoadingDots_auto_play="true"
            app:LoadingDots_dots_color="@color/light_grey"
            app:LoadingDots_dots_count="3"
            android:layout_gravity="center"
            app:LoadingDots_dots_size="15dp"
            app:LoadingDots_dots_space="4dp"
            android:id="@+id/loader"
            app:LoadingDots_loop_duration="800"
            app:LoadingDots_loop_start_delay="0"
            app:LoadingDots_jump_duration="200"
            app:LoadingDots_jump_height="4dp"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/white">
        <!--  This is the main content -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="15dp"
            android:background="@drawable/dotted_line_layout"
            android:orientation="vertical"
            android:padding="10dp">

            <androidx.appcompat.widget.AppCompatEditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="3dp"
                android:id="@+id/name"
                android:drawablePadding="5dp"
                android:background="@null"
                android:drawableLeft="@drawable/ic_user_green"
                 />

        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:padding="5dp"
            android:textSize="16sp"
            android:text="Name"
            android:layout_marginLeft="30dp"
            android:textColor="@android:color/black" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/white">
        <!--  This is the main content -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="15dp"
            android:background="@drawable/dotted_line_layout"
            android:orientation="vertical"
            android:padding="10dp">
            <androidx.appcompat.widget.AppCompatEditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="3dp"
                android:background="@null"
                android:id="@+id/email"
                android:drawablePadding="5dp"
                android:drawableLeft="@drawable/ic_mail_green"
                />

        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:padding="5dp"
            android:textSize="16sp"
            android:text="Email Address"
            android:layout_marginLeft="30dp"
            android:textColor="@android:color/black" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/white">
        <!--  This is the main content -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="15dp"
            android:background="@drawable/dotted_line_layout"
            android:orientation="vertical"
            android:padding="10dp">

            <androidx.appcompat.widget.AppCompatEditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="3dp"
                android:background="@null"
                android:drawablePadding="5dp"
                android:id="@+id/mobileNumber"
                android:drawableLeft="@drawable/ic_phone_call"
                />

        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:padding="5dp"
            android:textSize="16sp"
            android:text="Mobile Number"
            android:layout_marginLeft="30dp"
            android:textColor="@android:color/black" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/white">
        <!--  This is the main content -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_margin="15dp"
            android:background="@drawable/dotted_line_layout"
            android:orientation="vertical"
            android:padding="10dp">

            <androidx.appcompat.widget.AppCompatEditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="3dp"
                android:background="@null"
                android:drawablePadding="5dp"
                android:id="@+id/address"
                android:drawableLeft="@drawable/ic_location_green"
                />

        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:padding="5dp"
            android:textSize="16sp"
            android:text="Address"
            android:layout_marginLeft="30dp"
            android:textColor="@android:color/black" />

    </RelativeLayout>
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Update"
        android:layout_gravity="center"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:id="@+id/updateBtn"
        android:paddingStart="40dp"
        android:paddingEnd="40dp"
        android:background="@drawable/button_yellow"
        android:layout_marginTop="50dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:textAllCaps="true"/>
</LinearLayout>